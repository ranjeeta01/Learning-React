{
    "manifest_version": 2,
   "name": "webTT",
    "description": "This extension tracks the time spent on distraction websites",
    "version": "1.0",
    "author":"renz01",
    "content_scripts": [
        {
        "matches": ["https://www.facebook.com/*","https://www.youtube.com/*","https://www.instagram.com/*"],
        "css": ["main.css"]
        }
    ],
   "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "website time tracker!"
    }
}